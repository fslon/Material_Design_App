<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MaterialDesignApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryVariantForSecondaryText">@color/color_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>

        <item name="colorForEditBorders">@color/color_gray</item>

    </style>

    <style name="DarkTheme" parent="Theme.MaterialDesignApp">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnPrimaryVariantForSecondaryText">@color/gray_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/black</item>

        <item name="colorForEditBorders">@color/gray_light</item>

    </style>

    <style name="PinkTheme" parent="Theme.MaterialDesignApp">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pinkPrimary</item>
        <item name="colorPrimaryVariant">@color/pinkPrimaryVariant</item>
        <item name="colorOnPrimary">@color/pinkOnPrimary</item>
        <item name="colorOnPrimaryVariantForSecondaryText">@color/pinkOnPrimaryVariantForSecondaryText</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pinkSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/pink_theme_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/pink_theme_background</item>

        <item name="colorForEditBorders">@color/pinkForBorders</item>


    </style>

    <style name="GreenTheme" parent="Theme.MaterialDesignApp">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorPrimaryDark">@color/green_primary_dark</item>
        <item name="colorAccent">@color/green_accent</item>

        <item name="colorPrimaryVariant">@color/green_theme_primary_variant</item>
        <item name="colorOnPrimary">@color/green_theme_on_primary</item>
        <item name="colorOnPrimaryVariantForSecondaryText">@color/green_theme_on_primary_variant_for_secondary_text</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_theme_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/green_theme_on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="backgroundColor">@color/white</item>

        <item name="colorForEditBorders">@color/green_theme_for_borders</item>

    </style>


    <style name="TextInputEditTextCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">?attr/colorPrimaryVariant</item>



    </style>

    <style name="RadioButtonsWithThemes" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">?attr/colorOnPrimaryVariantForSecondaryText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TabLayoutTheme" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">?colorOnPrimaryVariantForSecondaryText</item>
        <item name="tabSelectedTextColor">?colorSecondary</item>

    </style>


</resources>