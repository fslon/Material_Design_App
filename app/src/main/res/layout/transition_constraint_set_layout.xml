<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/constraint_layout_and_constraint_set_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="constraint_layout_and_constraint_set_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/constraint_layout_and_constraint_set_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="constraint_layout_and_constraint_set_button example"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/constraint_layout_and_constraint_set_button"
        app:layout_constraintStart_toStartOf="@id/constraint_layout_and_constraint_set_button"
        app:layout_constraintTop_toBottomOf="@id/constraint_layout_and_constraint_set_button" />
</androidx.constraintlayout.widget.ConstraintLayout>